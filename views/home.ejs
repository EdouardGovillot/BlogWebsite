    <!-- ForEach Loop -->
    <% newPosts.forEach(function(newPosts){ %>
        <h1>
            <%= newPosts.title %>
        </h1>
        <% let newPostsContent = newPosts.content; %>
            <% if(newPostsContent.length > 100) { %>
                <p>
                    <%= newPostsContent.substring(0, 100) + " ..." %>
                        <a href="/posts/<%= newPosts.title%>">Read more</a>
                </p>
                <% } else { %>
                    <p>
                        <%= newPosts.content %>
                    </p>
                    <% } %>
                        <% }) %>



